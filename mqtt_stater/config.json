{
  "name": "Mqtt Stater",
  "version": "1.0.0",
  "slug": "mqtt_stater",
  "description": "Publish specific mqtt command, when getting a specified mqtt command. For example for setting a rgb color as a state when setting a color_temp",
  "startup": "before",
  "boot": "auto",
  "map": [
    "share:rw"
  ],
  "options": {
    "echo_topics": [],
    "fix_values": [],
    "mqtt_server": "",
    "mqtt_server_port": 1883,
    "mqtt_user": "",
    "mqtt_pass": "",
    "log_level": ""
  },
  "schema": {
    "echo_topics": [
      {
        "command": "str",
        "state": "str",
        "state_fire": "int?",
        "fix_values": [
          {
            "key_in": "str",
            "key_out": "str",
            "val": "str"
          }
        ]
      }
    ],
    "mqtt_server": "str",
    "mqtt_server_port": "int",
    "mqtt_user": "str?",
    "mqtt_pass": "str?",
    "log_level": "str?"
  }
}